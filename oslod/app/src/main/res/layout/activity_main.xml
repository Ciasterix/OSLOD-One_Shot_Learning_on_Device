<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/newImage"
        android:layout_width="390dp"
        android:layout_height="482dp"
        android:layout_above="@+id/btnTakePicture"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/textPredictedLabel"
        android:layout_width="284dp"
        android:layout_height="69dp"
        android:layout_above="@+id/newImage"
        android:layout_below="@+id/spinnerNetworks"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top"
        android:layout_marginStart="59dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="11dp"
        android:background="#80000000"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerCatalogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp" />

    <Spinner
        android:id="@+id/spinnerNetworks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerCatalogs"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:id="@+id/btnTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="11dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/btnFullResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/btnTakePicture"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <ImageButton
        android:id="@+id/btnBrowseImages"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/btnFullResults"
        app:srcCompat="@android:drawable/ic_dialog_dialer" />

</RelativeLayout>
