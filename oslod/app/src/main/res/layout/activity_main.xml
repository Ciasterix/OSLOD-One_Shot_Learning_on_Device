<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="1dp"
        android:text="Zrób zdjęcie"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnBrowseImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="1dp"
        android:text="Kolekcje"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/newImage"
        android:layout_width="395dp"
        android:layout_height="592dp"
        android:layout_above="@+id/btnTakePicture"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/textPredictedLabel"
        android:layout_width="387dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="45dp"
        android:background="#80000000"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerCatalogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newImage"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/btnFullResults"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/btnBrowseImages"
        android:layout_toEndOf="@+id/btnTakePicture"
        android:textStyle="bold"
        android:text="WYNIKI" />

</RelativeLayout>
