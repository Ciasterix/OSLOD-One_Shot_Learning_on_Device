<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/btnBrowseImages"
        android:text="Zrób zdjęcie"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnBrowseImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="2dp"
        android:text="Przeglądaj próbki"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/newImage"
        android:layout_width="395dp"
        android:layout_height="592dp"
        android:layout_above="@+id/btnTakePicture"
        android:layout_below="@+id/textPredictedLabel"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/textPredictedLabel"
        android:layout_width="387dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="16dp"
        android:background="#80000000"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>
